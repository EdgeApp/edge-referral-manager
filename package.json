{
  "name": "edge-rest-wallet",
  "version": "0.1.0",
  "private": true,
  "description": "A REST API for storing & sending money, powered by Edge",
  "repository": "https://github.app/EdgeApp/edge-referral-manager",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports,jsx -d ./lib ./src",
    "build.types": "tsc",
    "_build.demo": "parcel build src/demo/index.html",
    "clean": "rimraf dist lib",
    "fix": "npm run lint -- --fix",
    "prepare": "husky install && npm-run-all clean -p build.*",
    "start": "node -r sucrase/register src/index.ts",
    "test": "mocha -r sucrase/register 'test/**/*.test.ts'",
    "demo": "parcel serve src/demo/index.html --open",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn prepare"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-react": "^7.20.0",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.17.2",
    "@types/mocha": "^8.2.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-kit": "0.15.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "husky": "^7.0.0",
    "lint-staged": "^10.2.11",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sucrase": "^3.20.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "biggystring": "^4.2.3",
    "bootstrap": "^4.4.1",
    "cleaners": "^0.3.17",
    "cors": "^2.8.5",
    "edge-core-js": "^2.27.4",
    "edge-currency-plugins": "^3.8.0",
    "express": "^4.17.1",
    "react-bootstrap": "2.10.0"
  }
}
